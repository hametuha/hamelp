{
	"name": "hamelp",
	"version": "1.0.4",
	"description": "FAQ generator for WordPress",
	"scripts": {
		"test": "RESULT=${PWD##*/} && wp-env run tests-cli ./wp-content/plugins/$RESULT/vendor/bin/phpunit -c ./wp-content/plugins/$RESULT/phpunit.xml.dist",
		"test:js": "jest",
		"start": "wp-env start",
		"update": "wp-env start --update",
		"stop": "wp-env stop",
		"env": "wp-env",
		"cli": "wp-env run cli wp",
		"cli:test": "wp-env run tests-cli wp",
		"package": "npm run build:css && npm run build:js && npm run build:blocks && npm run dump",
		"watch": "npm-watch",
		"build:css": "sass ./src/scss/:./assets/css/ --style=compressed && postcss ./assets/css/*.css --use autoprefixer --replace",
		"build:js": "grab-deps js src/js assets/js",
		"build:blocks": "wp-scripts build --source-path=src/blocks --output-path=assets/blocks",
		"dump": "grab-deps dump assets/js,assets/css",
		"fix": "npm run fix:js && npm run fix:css",
		"fix:js": "wp-scripts lint-js --fix './src/js/**/*.js' './src/blocks/**/*.js'",
		"fix:css": "wp-scripts lint-style --fix './src/scss/**/*.scss' './src/blocks/**/*.scss'",
		"lint": "npm run lint:css && npm run lint:js",
		"lint:css": "wp-scripts lint-style './src/scss/**/*.scss' './src/blocks/**/*.scss'",
		"lint:js": "wp-scripts lint-js './src/js/**/*.js' './src/blocks/**/*.js'",
		"prepare": "husky"
	},
	"engines": {
		"node": ">=22.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/hametuha/hamelp.git"
	},
	"author": "Hametuha INC.",
	"license": "GPL-3.0",
	"bugs": {
		"url": "https://github.com/hametuha/hamelp/issues"
	},
	"homepage": "https://github.com/hametuha/hamelp",
	"devDependencies": {
		"@kunoichi/grab-deps": "^3.0.0",
		"@wordpress/env": "^10.38.0",
		"@wordpress/scripts": "^30.0.0",
		"autoprefixer": "^10.4.16",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"npm-watch": "^0.13.0",
		"postcss": "^8.4.33",
		"postcss-cli": "^11.0.0",
		"sass": "^1.83.0"
	},
	"watch": {
		"build:js": {
			"extensions": "js",
			"patterns": [
				"src/js"
			]
		},
		"build:css": {
			"extensions": "scss",
			"patterns": [
				"src/scss"
			]
		},
		"build:blocks": {
			"extensions": "js,scss,php,json",
			"patterns": [
				"src/blocks"
			]
		},
		"dump": {
			"extensions": "js,css",
			"patterns": [
				"assets/js",
				"assets/css"
			]
		}
	},
	"volta": {
		"node": "22.12.0"
	},
	"lint-staged": {
		"src/**/*.js": "npm run lint:js",
		"src/**/*.scss": "npm run lint:css",
		"*.php": "composer lint",
		"app/**/*.php": "composer lint"
	}
}
